<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <shape
            android:innerRadius="150dp"
            android:shape="ring"
            android:thicknessRatio="80.0"
            android:useLevel="true">

            <gradient
                android:centerColor="@color/pion_basic_soft_blue"
                android:endColor="@color/pion_basic_soft_blue"
                android:startColor="@color/pion_basic_soft_blue"
                android:type="sweep" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="270"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="270">

            <shape
                android:innerRadius="150dp"
                android:shape="ring"
                android:thicknessRatio="200.0"
                android:useLevel="true">

                <rotate
                    android:fromDegrees="0"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="360" />

                <gradient
                    android:centerColor="@color/white"
                    android:endColor="@color/white"
                    android:startColor="@color/white"
                    android:type="sweep" />

            </shape>
        </rotate>
    </item>
</layer-list>